<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:id="@+id/crime_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:orientation="vertical">

        <include
            android:id="@+id/go_back"
            layout="@layout/main_title_bar"
            android:layout_width="match_parent"

            android:layout_height="50dp">

        </include>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/h_back"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:background="#e0000000"

                app:srcCompat="@drawable/bj"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/h_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/head1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/h_back"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_line"
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/user_line"
                    android:text="alice"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/user_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/user_line"
                    android:text="123***"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="17sp" />
            </RelativeLayout>

        </RelativeLayout>




        <Button
            android:id="@+id/btn_login1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/register_selector"
            android:text="用户名"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
        <!--显示tv register , find_psw -->
        <Button
            android:id="@+id/btn_login2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/register_selector"
            android:text="性别"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btn_login3"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/register_selector"
            android:text="供货商认证"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btn_login4"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/register_selector"
            android:text="资金"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btn_login5"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/register_selector"
            android:text="收藏夹"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btn_login6"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/register_selector"
            android:text="关于"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btn_login7"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/register_selector"
            android:text="切换账号"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btn_login8"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/register_selector"
            android:text="退出登录"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="鱼悦.供应商端1.0" />

    </LinearLayout>
</ScrollView>
